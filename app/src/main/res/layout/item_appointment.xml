<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <TextView
            android:id="@+id/appointmentTextView"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:buttonTint="@android:color/holo_green_dark"
            android:checked="false"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            tools:text="Go to the market and bring vegetables immediately today." />

        <Button
            android:id="@+id/deleteButton"
            style="@android:style/Widget.Material.Light.Button.Borderless"
            android:layout_width="57dp"
            android:layout_height="41dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:textAlignment="viewStart"
            app:icon="@android:drawable/ic_delete"
            app:iconTint="@color/fui_bgEmail" />

        <TextView
            android:id="@+id/timeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/appointmentTextView"
            android:textColor="@color/black"
            android:text="TextView" />

        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="133dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/timeTextView"
            android:layout_marginStart="6dp"
            android:layout_marginLeft="3dp"
            android:textColor="@color/black"
            android:layout_marginBottom="0dp"
            android:layout_toEndOf="@id/timeTextView"
            android:text="TextView" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>